<Window x:Class="ClassicControls.ImageListDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassicControls"
        mc:Ignorable="d"
        Title="ImageListDemo" Height="450" Width="800">
    <Grid>
        <ListBox Name="lst" SelectionMode="Multiple">
            <StackPanel Orientation="Vertical">
                <Image Source="image2.jpg"  Width="30" Height="30"></Image>
                <Label VerticalContentAlignment="Center">A happy face</Label>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Image Source="image3.jpg"  Width="30" Height="30"></Image>
                <Label VerticalContentAlignment="Center">WPF Topic Controls</Label>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Image Source="image1.jpeg"  Width="30" Height="30"></Image>
                <Label VerticalContentAlignment="Center">WPF Topic Controls</Label>
            </StackPanel>
        </ListBox>
    </Grid>
</Window>
