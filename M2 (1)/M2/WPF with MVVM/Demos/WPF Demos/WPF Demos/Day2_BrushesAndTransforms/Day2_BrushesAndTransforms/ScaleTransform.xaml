<Window x:Class="Day2_BrushesAndTransforms.ScaleTransform"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScaleTransform" Height="300" Width="300">
    <StackPanel Width="100" Margin="10">
        <Button Background="Red" Margin="10">No Scaling</Button>
        <Button Background="Orange" Margin="10">
            <Button.RenderTransform>
                <ScaleTransform ScaleX="2"/>
            </Button.RenderTransform>
            X
        </Button>
        <Button Background="Lime" Margin="10">
            <Button.RenderTransform>
                <ScaleTransform ScaleY="2"/>
            </Button.RenderTransform>
            Y
        </Button>
        <Button Background="Yellow" Margin="20">
            <Button.RenderTransform>
                <ScaleTransform ScaleX="2" ScaleY="2"/>
            </Button.RenderTransform>
            X+Y
        </Button>
    </StackPanel>
</Window>
