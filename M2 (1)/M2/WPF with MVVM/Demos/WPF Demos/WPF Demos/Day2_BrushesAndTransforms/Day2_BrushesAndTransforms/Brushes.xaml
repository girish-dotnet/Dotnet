<Window x:Class="Day2_BrushesAndTransforms.Brushes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Brushes" Height="300" Width="300">
    <StackPanel Margin="5">
        <Button Margin="5" MaxHeight="40" MaxWidth="200" Content="Single Color using Attribute" Background="LightBlue"/>
        <Button Margin="5" MaxHeight="40" MaxWidth="200" Content="Solid Color Brush">
            <Button.Background>
                <SolidColorBrush Color="LightGray"/>
            </Button.Background>
        </Button>
        <Button Margin="5" MaxHeight="40" MaxWidth="200" Content="Linear Gradient Brush">
            <Button.Background>
                <LinearGradientBrush StartPoint="1,0.5" EndPoint="1,1">
                    <GradientStop Offset="0.25" Color="LightCoral"/>
                    <GradientStop Offset="0.40" Color="LightSteelBlue"/>
                    <GradientStop Offset="0.65" Color="LightGoldenrodYellow"/>
                    <GradientStop Offset="1" Color="LightSalmon"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </StackPanel>
</Window>
